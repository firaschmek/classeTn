<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView android:id="@+id/authimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group"
        android:layout_centerHorizontal="true"
      android:layout_marginTop="10dp"
       />

    <TextView
        android:id="@+id/email_auth_txtv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="@string/email_auth_txtv"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/email_auth_editext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_auth_txtv"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/phone_auth_txtv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_auth_editext"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/phone_auth_txtv"
        android:textAlignment="center"
        android:textColor="@color/black" />
    <EditText
        android:id="@+id/phone_auth_editext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_auth_txtv"
        android:layout_marginTop="20dp"
        android:inputType="phone"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/phone_auth_editext"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:padding="12dp"
        android:background="@color/orange700"
        android:text="@string/login_btn_str"/>

    <TextView
        android:id="@+id/splash_text4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/splash_text4"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

</RelativeLayout>